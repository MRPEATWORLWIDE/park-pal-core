{
  "name": "@commercelayer/demo-store-website",
  "version": "3.0.0",
  "description": "This Demo Store is a completely static ecommerce solution (with SSR capability) powered by Commerce Layer.",
  "private": true,
  "scripts": {
    "sync:organization": "dotenv -c local node npm-sync-organization.js",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "dev": "next dev",
    "local:build": "dotenv -c local npm run build",
    "local:start": "npm start",
    "local:serve": "npx serve out",
    "lint": "next lint",
    "ts:check": "tsc --noEmit && npm run test:data",
    "test:data": "node data/runTestData.js",
    "test": "jest --testPathIgnorePatterns ./data",
    "coverage": "jest --coverage",
    "lighthouse": "npx -p @lhci/cli lhci autorun"
  },
  "dependencies": {
    "@commercelayer/demo-store-types": "^3.0.0",
    "@commercelayer/js-auth": "^6.5.0",
    "@commercelayer/react-components": "4.15.10",
    "@commercelayer/sdk": "6.13.0",
    "@svgr/webpack": "^8.1.0",
    "@types/lodash": "^4.17.7",
    "fuse.js": "^7.0.0",
    "iframe-resizer-react": "^1.1.1",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "next": "^14.2.13",
    "next-localization": "^0.12.0",
    "next-pwa": "^5.6.0",
    "react": "^18",
    "react-dom": "^18",
    "react-remark": "^2.1.0",
    "swiper": "^11.1.14",
    "use-immer": "^0.10.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16",
    "@types/jest": "^29.5.13",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^20",
    "@types/react": "^18",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.13",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.47",
    "sass": "^1.79.3",
    "tailwindcss": "^3.4.12",
    "ts-jest": "^29.2.5",
    "typescript": "5.6.2"
  },
  "engines": {
    "node": ">= 20"
  }
}
