{
  "name": "@commercelayer/demo-store-website",
  "version": "4.0.0",
  "description": "This Demo Store is a completely static ecommerce solution (with SSR capability) powered by Commerce Layer.",
  "private": true,
  "scripts": {
    "sync:organization": "dotenv -c local node npm-sync-organization.js",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "dev": "next dev",
    "local:build": "dotenv -c local npm run build",
    "local:start": "npm start",
    "local:serve": "npx serve out",
    "lint": "next lint",
    "ts:check": "tsc --noEmit && npm run test:data",
    "test:data": "node data/runTestData.js",
    "test": "jest --testPathIgnorePatterns ./data",
    "coverage": "jest --coverage",
    "lighthouse": "npx -p @lhci/cli lhci autorun"
  },
  "dependencies": {
    "@commercelayer/demo-store-types": "^4.0.0",
    "@commercelayer/js-auth": "^6.7.0",
    "@commercelayer/react-components": "4.17.0",
    "@commercelayer/sdk": "6.27.0",
    "@svgr/webpack": "^8.1.0",
    "@types/lodash": "^4.17.13",
    "fuse.js": "^7.0.0",
    "iframe-resizer-react": "^1.1.1",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "next": "^15.1.2",
    "next-localization": "^0.12.0",
    "react": "^18",
    "react-dom": "^18",
    "react-remark": "^2.1.0",
    "swiper": "^11.1.15",
    "use-immer": "^0.11.0"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "5.9.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.4",
    "eslint": "8.57.1",
    "eslint-config-next": "15.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.49",
    "sass": "^1.83.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">= 20.9"
  }
}
